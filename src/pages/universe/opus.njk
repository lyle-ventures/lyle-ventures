<script>
// ============================================================================
// MODEL PARAMETERS (Architectural Constants)
// Change these in Claude Code sessions, not here
// ============================================================================
const MODEL = {
  genesis: new Date('2009-01-03'),
  cycleBottom: new Date('2022-11-21'),
  cyclePeak: new Date('2026-12-01'),
  logA: -23.3,
  logB: 7.5,
  logStd: 0.095,
  bottomSigma: -3.0,
  peakSigma: 1.5
};

// ============================================================================
// OPUS APP
// ============================================================================
const Opus = {
  btcPrice: 89500,

  init() {
    this.calculate();
  },

  updatePrice() {
    const price = parseFloat(document.getElementById('btc-input').value);
    if (price > 0) {
      this.btcPrice = price;
      this.calculate();
    }
  },

  async fetchLive() {
    try {
      const res = await fetch('https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=usd');
      const data = await res.json();
      if (data.bitcoin?.usd) {
        this.btcPrice = data.bitcoin.usd;
        document.getElementById('btc-input').value = this.btcPrice;
        this.calculate();
      }
    } catch (e) {
      alert('Failed to fetch. Enter manually.');
    }
  },

  calculate() {
    const today = new Date();
    const p = MODEL;

    // Days
    const daysSinceGenesis = Math.floor((today - p.genesis) / 86400000);
    const daysSinceBottom = Math.floor((today - p.cycleBottom) / 86400000);
    const daysInCycle = Math.floor((p.cyclePeak - p.cycleBottom) / 86400000);
    const daysToPeak = Math.floor((p.cyclePeak - today) / 86400000);

    // Baseline
    const logBaseline = p.logA + p.logB * Math.log10(daysSinceGenesis);
    const baseline = Math.pow(10, logBaseline);

    // Sine & expected σ
    const sine = Math.sin(Math.PI * daysSinceBottom / daysInCycle - Math.PI / 2);
    const t = (sine + 1) / 2;
    const expectedSigma = p.bottomSigma + t * (p.peakSigma - p.bottomSigma);
    const expectedPrice = baseline * Math.pow(10, expectedSigma * p.logStd);

    // Actual σ
    const actualSigma = (Math.log10(this.btcPrice) - logBaseline) / p.logStd;
    const mispricing = ((this.btcPrice - expectedPrice) / expectedPrice) * 100;

    // σ levels
    const sigma = (s) => baseline * Math.pow(10, s * p.logStd);

    // Phase & zone
    let phase, zone;
    if (sine >= 0.87) { phase = 'Euphoria'; zone = 'SELL'; }
    else if (sine >= 0.71) { phase = 'Thrill'; zone = 'START SELLING'; }
    else if (sine >= 0.50) { phase = 'Belief'; zone = 'HOLD'; }
    else if (sine >= 0.00) { phase = 'Optimism'; zone = 'HOLD'; }
    else if (sine >= -0.50) { phase = 'Hope'; zone = 'ACCUMULATE'; }
    else { phase = 'Disbelief'; zone = 'ACCUMULATE'; }

    // Update UI
    const fmt = (n) => '$' + Math.round(n).toLocaleString();

    document.getElementById('days-to-peak').textContent = daysToPeak;
    document.getElementById('btc-price').textContent = fmt(this.btcPrice);
    document.getElementById('actual-sigma').textContent = actualSigma.toFixed(2) + 'σ';
    document.getElementById('expected-sigma').textContent = expectedSigma.toFixed(2) + 'σ';
    document.getElementById('mispricing').textContent = (mispricing >= 0 ? '+' : '') + mispricing.toFixed(1) + '%';
    document.getElementById('mispricing').className = 'text-lg font-semibold ' + (mispricing < 0 ? 'text-green-400' : 'text-red-400');
    document.getElementById('current-phase').textContent = phase;
    document.getElementById('current-zone').textContent = zone;

    // σ levels
    document.getElementById('s-m2').textContent = fmt(sigma(-2));
    document.getElementById('s-m1').textContent = fmt(sigma(-1));
    document.getElementById('s-0').textContent = fmt(baseline);
    document.getElementById('s-08').textContent = fmt(sigma(0.8));
    document.getElementById('s-10').textContent = fmt(sigma(1.0));
    document.getElementById('s-13').textContent = fmt(sigma(1.3));
    document.getElementById('s-15').textContent = fmt(sigma(1.5));
    document.getElementById('s-20').textContent = fmt(sigma(2.0));

    // Exit levels
    document.getElementById('exit-08').textContent = fmt(sigma(0.8));
    document.getElementById('exit-10').textContent = fmt(sigma(1.0));
    document.getElementById('exit-13').textContent = fmt(sigma(1.3));
    document.getElementById('exit-15').textContent = fmt(sigma(1.5));
    document.getElementById('exit-20').textContent = fmt(sigma(2.0));

    // Cycle progress
    const pct = Math.min(100, (daysSinceBottom / daysInCycle) * 100);
    document.getElementById('cycle-bar').style.width = pct + '%';
    document.getElementById('cycle-text').textContent = `Day ${daysSinceBottom} of ${daysInCycle}`;

    // Projection table
    this.updateProjectionTable(today, p.cyclePeak, baseline, daysInCycle);
  },

  updateProjectionTable(start, end, baseline, daysInCycle) {
    const rows = [];
    let current = new Date(start);
    let i = 0;

    while (current <= end && i < 14) {
      const daysSinceBottom = Math.floor((current - MODEL.cycleBottom) / 86400000);
      const daysSinceGenesis = Math.floor((current - MODEL.genesis) / 86400000);
      const logB = MODEL.logA + MODEL.logB * Math.log10(daysSinceGenesis);
      const base = Math.pow(10, logB);
      const sine = Math.sin(Math.PI * daysSinceBottom / daysInCycle - Math.PI / 2);
      const t = (sine + 1) / 2;
      const expS = MODEL.bottomSigma + t * (MODEL.peakSigma - MODEL.bottomSigma);
      const expP = base * Math.pow(10, expS * MODEL.logStd);
      const s10 = base * Math.pow(10, 1.0 * MODEL.logStd);
      const s15 = base * Math.pow(10, 1.5 * MODEL.logStd);
      const s20 = base * Math.pow(10, 2.0 * MODEL.logStd);

      const label = i === 0 ? 'TODAY' : current.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
      const cls = i === 0 ? 'bg-indigo-500/10 font-semibold' : '';

      rows.push(`<tr class="${cls} border-b border-gray-800/50">
        <td class="py-2 text-gray-${i === 0 ? '100' : '300'}">${label}</td>
        <td class="py-2 text-right text-gray-400">$${Math.round(base/1000)}K</td>
        <td class="py-2 text-right text-gray-400">${sine.toFixed(3)}</td>
        <td class="py-2 text-right text-indigo-400">${expS.toFixed(2)}σ</td>
        <td class="py-2 text-right text-gray-100">$${Math.round(expP/1000)}K</td>
        <td class="py-2 text-right text-green-400">$${Math.round(s10/1000)}K</td>
        <td class="py-2 text-right text-blue-400">$${Math.round(s15/1000)}K</td>
        <td class="py-2 text-right text-purple-400">$${Math.round(s20/1000)}K</td>
      </tr>`);

      current = new Date(current.getFullYear(), current.getMonth() + 1, current.getDate());
      i++;
    }

    document.getElementById('projection-table-body').innerHTML = rows.join('');
  }
};

